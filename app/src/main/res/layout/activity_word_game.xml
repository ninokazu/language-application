<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="org.android.soldesk.intro_slide.game.game3.WordGameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/topbar"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:onClick="onButton1Clicked"
            android:scaleType="fitXY"
            android:src="@drawable/btnhome" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="단어놀이"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/btnWordPop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/info" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="공부한 단어를 맞춰 보아요."
            android:textSize="20sp"
            />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_image"
            android:layout_below="@+id/tv_info"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text=""
            android:textSize="50sp" />

        <EditText
            android:id="@+id/et_guess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_word"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="단어를 입력하세요."
            android:inputType="textPersonName"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/et_guess"
            android:gravity="center"
            >
        <ImageView
            android:id="@+id/b_check"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_below="@+id/et_guess"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/check"
            />

        <ImageView
            android:id="@+id/b_new"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/next"
            />
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>
